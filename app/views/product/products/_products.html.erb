<% @products.each do |product| %>
    <div class="col-md-4 mt-5">
      <img src= <%= product.image %> alt="Product image" class="img-fluid" style="height: 250px; width: 100%; display: block;">
      <div class="product-detail-container">
        <div class="d-flex justify-content-between align-items-center">
          <a class="text-truncate"><%= product.title %></a>
        </div>
        <div class="text-success font-weight-bold">R$: <%= product.value %></div>
        <div style="height: 115px">
        <div class="description"><%= product.description %></div>
        </div>
        <div class="mt-3">
          <button class="btn btn-success btn-block">Comprar</button>
        </div>
      </div>
    </div>
  <% end %>