<div class="card" style="background-color:#f6f6f6;">
  <div class="card-body">
    <%= form_with(model: [:admin, product], local: true) do |f| %>
      <%= render "layouts/form_errors", record: product %>
      <div class="form-group">
        <label>Título</label>
        <%= f.text_field :title, class: "form-control" %>
      </div>
      <div class="form-group">
        <label>Descrição</label>
        <%= f.text_field :description, class: "form-control" %>
      </div>
      <div class="form-row">
        <div class="col-6">
          <div class="form-group">
            <label>Valor</label>
            <%= f.number_field :value, class: "form-control" %>
          </div>
        </div>
        <div class="col-6">
          <div class="form-group">
            <label>Imagem</label>
            <%= f.text_field :image, class: "form-control" %>
          </div>
        </div>
      </div>
      <button type="submit" class="btn btn-primary">Salvar</button>
      <%# <%= link_to "Voltar", product_admins_path, class: "btn btn-secondary ml-3" %> %>
    <% end %>
  </div>
</div>